  LD   ($3AC8),HL          ;04AA;
  POP  HL                  ;04AD; Get return address, points to address
  LD   E,(HL)              ;04AE; of 'main' ROM routine to be called.
  INC  HL                  ;04AF; Fetch address of routine to be called.
  LD   D,(HL)              ;04B0;
  INC  HL                  ;04B1;
