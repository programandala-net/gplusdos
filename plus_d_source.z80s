  LD   HL,$3DE5            ;04B3;
  LD   (HL),$47            ;04B6; Signal 'CALBAS executing'.
  LD   HL,$0066            ;04B8; Return address to +D system is
  PUSH HL                  ;04BB; 'NMI_RAM'.
  PUSH DE                  ;04BC; Push address of routine to be called.
  LD   HL,($3AC8)          ;04BD; Restore HL and DE.
  LD   DE,($3AC5)          ;04C0;
