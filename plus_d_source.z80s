  LD   (IY+0),$FF          ;0480; Clear error code. (ERR_NR)
  LD   HL,STMT_NEXT        ;0484; Return address to 'main' ROM is
  RST  SYNTAX_Z            ;0487; 'STMT_NEXT' if syntax is being checked.
  JP   Z,UNPAGE_HL         ;0488;
